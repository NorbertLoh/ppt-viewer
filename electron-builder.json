{
    "appId": "com.norbertloh.pptviewer",
    "productName": "PPT Viewer",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*"
    ],
    "extraResources": [
        "electron/scripts/**/*"
    ],
    "mac": {
        "target": "dmg",
        "hardenedRuntime": true,
        "gatekeeperAssess": false
    }
}